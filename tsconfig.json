{
    "compilerOptions": {
        "target": "es2016",
        "module": "commonjs",
        "noEmit": false,
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,
        "strict": true,
        "noUncheckedIndexedAccess": true,
        "skipLibCheck": true,
        "isolatedModules": true,
        "outDir": "dist"
    },
    "include": ["src"],
    "exclude": ["node_modules"]
}
